<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="it.nexbit.cuba.security.forgotpassword.web.loginwindow.NexbitAppLoginWindow"
        extends="/com/haulmont/cuba/web/app/loginwindow/loginwindow.xml"
        messagesPack="it.nexbit.cuba.security.forgotpassword.web">
    <layout>
        <vbox id="loginWrapper"
              spacing="true">
            <vbox id="loginMainBox">
                <grid id="loginFormLayout">
                    <rows>
                        <row id="resetPasswordRow">
                            <label id="resetPasswordSpacer" visible="false"/>

                            <linkButton id="resetPasswordButton"
                                        stylename="nx-reset-button"
                                        visible="false"
                                        caption="msg://loginWindow.resetPassword"
                                        invoke="onResetPasswordBtnClick"/>
                        </row>
                    </rows>
                </grid>
            </vbox>
        </vbox>
    </layout>
</window>